<UserControl x:Class="TileBasedLevelEditor.Views.TilemapEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TileBasedLevelEditor.Views"
             xmlns:vm="clr-namespace:TileBasedLevelEditor.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.DataContext>
        <vm:TilemapEditorViewModel/>
    </UserControl.DataContext>

    <Grid>
        <local:TileGrid DataContext="{Binding TileGridVM}"/>
    </Grid>
</UserControl>
