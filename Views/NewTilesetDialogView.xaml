<Window x:Class="TileBasedLevelEditor.Views.NewTilesetDialogView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TileBasedLevelEditor.Views"
        xmlns:misc="clr-namespace:TileBasedLevelEditor.Misc" 
        xmlns:viewmodels="clr-namespace:TileBasedLevelEditor.ViewModels" 
        d:DataContext="{d:DesignInstance Type=viewmodels:TilesetViewModel}"
        mc:Ignorable="d"
        Title="New Tileset" Height="400" Width="500"
        ResizeMode="NoResize">
    
    <Grid Background="Gray">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="New Tileset"
                   Margin="11 10 0 0"
                   FontSize="20"
                   FontWeight="SemiBold"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"/>

        <Border Grid.Row="1"
                CornerRadius="3"
                Background="LightGray"
                BorderBrush="DarkGray"
                BorderThickness="4"
                Margin="10 0 10 10">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Background="Transparent">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="Name: "
                               FontSize="16"
                               VerticalAlignment="Center"/>
                    
                    <TextBox Grid.Column="1"
                             Height="30"
                             VerticalAlignment="Center"
                             FontSize="15"
                             VerticalContentAlignment="Center"
                             HorizontalContentAlignment="Left"
                             Text="{Binding NewTilesetName}"/>
                </Grid>

                <Grid Grid.Row="1"
                      Margin="0 10 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="70"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="Source: "
                               FontSize="16"
                               VerticalAlignment="Center"/>
                    
                    <TextBox Grid.Column="1"
                             Height="30"
                             VerticalAlignment="Center"
                             FontSize="15"
                             VerticalContentAlignment="Center"
                             HorizontalContentAlignment="Left"
                             Text="{Binding NewTilesetPath, Mode=TwoWay}"/>

                    <Button Grid.Column="2"
                            Content="Browse"
                            FontSize="15"
                            Background="DarkGray"
                            BorderBrush="Gray"
                            BorderThickness="1"
                            Margin="5 0 0 0"
                            Command="{Binding ChooseTilesetImageCommand}"/>
                </Grid>

                <Grid Grid.Row="2"
                      Margin="0 10 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="80"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="Tile Width: "
                               FontSize="16"
                               VerticalAlignment="Center"/>

                    <TextBox Grid.Column="1"
                             Height="30"
                             VerticalAlignment="Center"
                             FontSize="15"
                             VerticalContentAlignment="Center"
                             HorizontalContentAlignment="Left"
                             misc:NumericTextBoxBehavior.IsNumericOnly="True"
                             Text="{Binding NewTilesetTileWidth}"/>

                    <TextBlock Grid.Column="2"
                               Text="Tile Spacing: "
                               FontSize="16"
                               VerticalAlignment="Center"
                               Margin="30 0 0 0"/>

                    <TextBox Grid.Column="3"
                             Height="30"
                             VerticalAlignment="Center"
                             FontSize="15"
                             VerticalContentAlignment="Center"
                             HorizontalContentAlignment="Left"
                             misc:NumericTextBoxBehavior.IsNumericOnly="True"/>
                </Grid>
                
                <Grid Grid.Row="3"
                      Margin="0 10 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="80"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="Tile Height: "
                               FontSize="16"
                               VerticalAlignment="Center"/>

                    <TextBox Grid.Column="1"
                             Height="30"
                             VerticalAlignment="Center"
                             FontSize="15"
                             VerticalContentAlignment="Center"
                             HorizontalContentAlignment="Left"
                             misc:NumericTextBoxBehavior.IsNumericOnly="True"
                             Text="{Binding NewTilesetTileHeight}"/>

                    <TextBlock Grid.Column="2"
                               Text="Image Margin: "
                               FontSize="16"
                               VerticalAlignment="Center"
                               Margin="30 0 0 0"/>

                    <TextBox Grid.Column="3"
                             Height="30"
                             VerticalAlignment="Center"
                             FontSize="15"
                             VerticalContentAlignment="Center"
                             HorizontalContentAlignment="Left"
                             misc:NumericTextBoxBehavior.IsNumericOnly="True"/>
                </Grid>

                <Grid Grid.Row="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="1"
                            Content="Save as"
                            FontSize="15"
                            Background="DarkGray"
                            BorderBrush="Gray"
                            BorderThickness="1"
                            Margin="5 0 0 0"
                            Command="{Binding AddNewTilesetCommand}"/>
                    
                    <Button Grid.Column="2"
                           Content="Cancel"
                           FontSize="15"
                           Background="DarkGray"
                           BorderBrush="Gray"
                           BorderThickness="1"
                           Margin="5 0 0 0"
                           Command="{Binding CancelNewTilesetCommand}"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
