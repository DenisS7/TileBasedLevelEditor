<UserControl x:Class="TileBasedLevelEditor.Views.TilesetView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TileBasedLevelEditor.Views"
             xmlns:vm="clr-namespace:TileBasedLevelEditor.ViewModels"
             xmlns:misc="clr-namespace:TileBasedLevelEditor.Misc"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="500">

    <UserControl.DataContext>
        <vm:TilesetViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>
    
    <Border Background="BlanchedAlmond">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Button Content="Load Tileset"
                        Command="{Binding LoadTilesetCommand}"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="15"
                        Background="Azure"
                        BorderThickness="0"
                        Margin="5, 0, 0, 0"/>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="30"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="Tilesets"
                           FontSize="20"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           TextAlignment="Left"
                           Margin="5 0 0 0"/>
            </Grid>

            <Grid Grid.Row="2" Background="Black"></Grid>

            <ScrollViewer Grid.Row="3" 
                          Background="White"
                          VerticalScrollBarVisibility="Auto" 
                          HorizontalScrollBarVisibility="Auto" 
                          Padding="1, 1, 0 , 0">
                <Border BorderThickness="0">
                    <Canvas misc:TileSelector.HoverCommand="{Binding HoverTileCommand}">
                        <Image x:Name="TilesetImage"
                               Source="{Binding TilesetImage}"
                               Stretch="none"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"/>
                        <ItemsControl ItemsSource="{Binding GridLines}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas x:Name="OverlayCanvas"
                                            Background="Transparent"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Top"
                                            Width="{Binding ImageSize.X}"
                                            Height="{Binding ImageSize.Y}"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <ContentPresenter Content="{Binding}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <Rectangle Width="{Binding TileSize.X}"
                                   Height="{Binding TileSize.Y}"
                                   Visibility="{Binding IsTileHovered, Converter={StaticResource BoolToVis}}"
                                   Opacity="0.3"
                                   Fill="Aqua"
                                   IsHitTestVisible="False"
                                   Canvas.Left="{Binding HoveredTileLocation.X}"
                                   Canvas.Top="{Binding HoveredTileLocation.Y}"/>
                        <Canvas.InputBindings>
                            <MouseBinding Gesture=""></MouseBinding>
                        </Canvas.InputBindings>
                    </Canvas>
                </Border>
            </ScrollViewer>
        </Grid>
    </Border>
</UserControl>
